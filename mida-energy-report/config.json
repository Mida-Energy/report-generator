{
  "name": "Energy Reports",
  "version": "1.1.0",
  "slug": "energy-reports",
  "description": "Generate PDF energy reports from Shelly EM data with automatic data collection",
  "arch": ["armhf", "armv7", "aarch64", "amd64", "i386"],
  "startup": "application",
  "boot": "auto",
  "init": false,
  "privileged": ["SYS_ADMIN", "SYS_RAWIO"],
  "full_access": true,
  "apparmor": false,
  "image": "ghcr.io/mida-energy/energy-reports-{arch}",
  "ports": {
    "5000/tcp": 5000
  },
  "ports_description": {
    "5000/tcp": "Web interface and API"
  },
  "ingress": true,
  "ingress_port": 5000,
  "panel_icon": "mdi:chart-line",
  "panel_title": "Energy Reports",
  "panel_admin": false,
  "map": [
    "config:rw",
    "share:rw",
    "media:rw"
  ],
  "homeassistant_api": true,
  "hassio_api": true,
  "hassio_role": "default",
  "options": {
    "data_path": "/share/energy_reports/data",
    "auto_export_enabled": true,
    "export_interval_hours": 1
  },
  "schema": {
    "data_path": "str",
    "auto_export_enabled": "bool",
    "export_interval_hours": "int(1,24)"
  }
}
